extends base

block scripts
  script(src="/scripts/cookies.js")
  script(src="/scripts/ajax.js")
  script(src="/scripts/spot.js")

  if host
    script(src="https://sdk.scdn.co/spotify-player.js")
  else
    script(src="/scripts/guest.js")

  script(src="/scripts/tabs.js")

block content
  div
    a(href="http://google.com", id="imageLink", target="_blank")
      img(src="https://baconmockup.com/300/300", id="playing", style="display:block; margin: auto;")
      p(style="text-align: center; font-size: 1.8em", id="NAT") Song name

  div.tabs
    button(onclick="openTab(0)", id="qHead").active Queue
    button(onclick="openTab(1)") Search


  div.tabContainer(index=0)
    div
      ul(id="queue")

  div.tabContainer.hidden(index=1)
    div
      input(id="songSearch")
      ul(id="q")
